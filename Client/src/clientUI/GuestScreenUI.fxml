<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="main-pane"
	stylesheets="@GuestScreen.css" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="clientControllers.GuestScreenController">

	<VBox alignment="CENTER" spacing="30"
		AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0"
		AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0"
		prefWidth="Infinity" prefHeight="Infinity">

		<Label styleClass="title-label" text="Guest View" />

		<Label fx:id="freeSpaceLabel" styleClass="reg-label"
			text="Free Space: --%" />

		<ProgressIndicator fx:id="progressInd"
			progress="0.0" maxWidth="200.0" maxHeight="200.0" VBox.vgrow="ALWAYS" />

		<Button fx:id="backButton" onAction="#handleBackButton"
			styleClass="disconnect-button" text="Back" />

	</VBox>
</AnchorPane>
